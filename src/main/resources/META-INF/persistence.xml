<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="pokemonPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.edu.unifei.ecot13.Ability</class>
		<class>br.edu.unifei.ecot13.AlolanRaichu</class>
		<class>br.edu.unifei.ecot13.App</class>
		<class>br.edu.unifei.ecot13.Attack</class>
		<class>br.edu.unifei.ecot13.Burn</class>
		<class>br.edu.unifei.ecot13.EggPichu</class>
		<class>br.edu.unifei.ecot13.Fainted</class>
		<class>br.edu.unifei.ecot13.FirePunch</class>
		<class>br.edu.unifei.ecot13.FleurCannon</class>
		<class>br.edu.unifei.ecot13.HeldItem</class>
		<class>br.edu.unifei.ecot13.IronTail</class>
		<class>br.edu.unifei.ecot13.Paralyzed</class>
		<class>br.edu.unifei.ecot13.Pichu</class>
		<class>br.edu.unifei.ecot13.Pikachu</class>
		<class>br.edu.unifei.ecot13.Pokeball</class>
		<class>br.edu.unifei.ecot13</class>
		<class>br.edu.unifei.ecot13.Region</class>
		<class>br.edu.unifei.ecot13.Spark</class>
		<class>br.edu.unifei.ecot13.Status</class>
		<class>br.edu.unifei.ecot13.Thunder</class>
		<class>br.edu.unifei.ecot13.ThunderWave</class>
		<class>br.edu.unifei.ecot13.Type</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pokemon?useTimezone=true&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="pokemon"/>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="pokemon"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="javax.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>
</persistence>
